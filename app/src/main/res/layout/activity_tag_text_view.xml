<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <com.xiaozhiguang.views.TagTextView
        android:id="@+id/tv_with_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:text="这是一个带tag的TextView"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.xiaozhiguang.views.TagTextView
        android:id="@+id/tv_with_single_tags_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="2dp"
        android:text="这是一个尾部带tag的TextView"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.xiaozhiguang.views.TagTextView
        android:id="@+id/tv_with_multiple_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="2dp"
        android:text="这是一个带多个tag的TextView"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.xiaozhiguang.views.TagTextView
        android:id="@+id/tv_with_single_tags_anyway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="2dp"
        android:text="这是一个任意位置添加tag的TextView"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>
